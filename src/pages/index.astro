---
import Main from "../layouts/Main.astro"
import Cards from "../components/Cards.astro"
const profilePicture = "https://media.istockphoto.com/id/1679733776/id/foto/gambar-closeup-palu-hakim-dan-teks-kewajiban-produk.jpg?s=1024x1024&w=is&k=20&c=Wcx6OLnHf0hu1x1LxcNRBgXrY8CNETghBY0Hgi-xqW8="

// Astro.glob
const blogs = await Astro.glob<{
	title: string;
	poster: string;
	subtitle: string;
}>("../pages/blogs/*.md")
---

<Main title="Thor">
	<div class="profile">
		<img src={profilePicture} alt="Test Image" width="100px" height="100px"
		class="profile__picture"
		>
		<div class="profile__details">
			<h1>Palu Thor</h1>
			<h2>Berada di Negara Asgard</h2>
			<p>Mengahancurkan musuh musuh yang mengganggu asgard</p>
		</div>
	</div>

	<Cards cards={[
		{
			title: "here are my guilding philosophies for life",
			gradientFrom: "#818cf8",
			gradientTo: "#d8b4fe",
			to: "/philosopies"
		},
		{
			title: "A summary of my work history",
			gradientFrom: "#afde68",
			gradientTo: "#fca5a5",
			to: "/work-summary"
		},
		{
			title: "What I do beyond technology",
			gradientFrom: "#6ee7b7",
			gradientTo: "#9333ea",
			to: "/beyond-tech"
		}
	]}/>

	<div class="featured-blogs">
		<h3 class="featured-blogs__title">Featured Blogs</h3>
		<p class="featured-blogs__description">
			Opinion pieces that will change everything you know about web development.
		</p>
	</div>

	<ol class="blogs">
		{
			blogs.map((blog) => (
				<li class="blogs__list">
					<a class="blog__link" href="blogs/typescript-is-the-new-javascript">{blog.frontmatter.title}</a>
				</li>
			))
		}
	</ol>

</Main>		

<style>
	/* CSS as usual */
	.profile{
		display: flex;
		align-items: flex-start;
		flex-wrap: wrap;
		padding: 1rem 0 3rem 0;
	}

	.profile__details {
		flex: 1 0 300px;
	}

	.profile__details > h1 {
		margin-top: 0;
	}

	.profile__picture {
		border-radius: 50%;
		margin: 0 2rem 1rem 0;
	}

	.featured-blogs {
		margin: 0;
		padding: 3rem 0 0 0;

	}

	.featured-blogs__title {
		font-size: 2rem;
		color: var(--grey-900);
